#include<stdio.h>
void matrix_addition(int a[][10],int b[][10],int row,int col)
{
	int i,j,add[10][10];
	printf("after matrix additioin : \n");
	for(i=0;i<row;i++)
	{
		for(j=0;j<col;j++)
		{
			add[i][j]=a[i][j]+b[i][j];
			printf("%d ",add[i][j]);
		}
		printf("\n");
	}
}
int main()
{
	int i,j,row,col,a[10][10],b[10][10];
	printf("Enter row and column of the matrix : ");
	scanf("%d%d",&row,&col);
	printf("Enter first matrix : \n");
	for(i=0;i<row;i++)
	for(j=0;j<col;j++)
	scanf("%d",&a[i][j]);
	printf("Enter second matrix : \n");
	for(i=0;i<row;i++)
	for(j=0;j<col;j++)
	scanf("%d",&b[i][j]);
	matrix_addition(a,b,row,col);
}
