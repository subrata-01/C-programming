#include<stdio.h>
void add_matrix(int *a,int *b,int m,int n)
{
	int c[10][10];
	int i,j;
	for(i=0;i<m;i++)
	{
	  for(j=0;j<n;j++)
	  {
	     c[i][j]=*(a+(i*n+j))+*(b+(i*n+j));
	     printf("%d ",c[i][j]);
	  }
	 printf("\n");
	}
}
int main()
{
	int a[2][3]={{1,2,3},{9,6,5}};
	int b[2][3]={{12,11,9},{22,5,7}};
	add_matrix(&a[0][0],&b[0][0],2,3);
}
