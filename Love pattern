#include<stdio.h>
int main()
{
	int n,space,i,j,k,l;
	printf("Enter the value of n : ");
	scanf("%d",&n);
	space=n/4;
	for(i=n/2;i<n;i+=2)
	{
		for(j=0;j<space;j++)
		printf(" ");
		space-=1;
		for(k=0;k<i;k++)
		printf("*");
		for(l=0;l<n-i;l++)
		printf(" ");
		for(k=0;k<i;k++)
		printf("*");
		printf("\n");
	}
	space=0;
	for(i=0;i<n;i++)
	{
		for(j=0;j<space;j++)
		printf(" ");
		space+=1;
		for(k=0;k<2*n-1-2*i;k++)
		printf("*");
		printf("\n");		
	}
}
