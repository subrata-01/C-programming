#include<stdio.h>
int main()
{
	int n,space,i,j;
	printf("Enter the value of n : ");
	scanf("%d",&n);
	space=n/4;
	for(i=n/2;i<n;i+=2)
	{
		for(j=0;j<2*n-1;j++)
		{
			if(j<space)
			printf(" ");
			else if(j<i)
			printf("*");
			else if(j<=(n+1)-i)
			printf(" ");
			else
			printf("*");
			space-=1;
		}
	}
